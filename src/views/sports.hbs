    </form>
    </div>
    
{{else}}
<div id="getSport" class="simpleSection2">
        <form action="/sports/" method="PUT">
        <center>
        <h1>{{sport.name}}</h1>
    <br>
    <table class="table table-hover">
            <thead class="table-dark">
                <tr class="tdLarge">
                <th scope="col">Nom</th>
                <th scope="col">Participants</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            
            <tr class="tdLarge">
                    <td><input class="selectList1" type="text" placeholder="Discipline" name="name" value="{{sport.name}}"></td>
                    <td>{{sport.athletes.length}}</td>
                    <td><button type="submit" class="btn btn-warning">Modifier</button></td>

                </tr>
            
    </tbody>
        </table>

    </center>
    </form>
    </div>
    <div id="listAthletes" class="simpleSection2">
        <form action="/sports/addAthleteInSports" method="POST">
            <center>
                <h2>Participants de la discipline</h2>
                <br>
                <table class="table table-hover">
                <thead class="table-dark">
                    <tr class="tdLarge">
                    <th scope="col">Pr√©nom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Pays</th>
                    <th scope="col"></th>
                    
                    </tr>
                </thead>
                <tbody>
                {{#each listAthleteBySport}}
                    <tr class="tdLarge">
                        <td><a href="/athletes/{{_id}}/sports">{{firstName}}</a></td>
                        <td><a href="/athletes/{{_id}}/sports">{{lastName}}</a></td>
                        <td><a href="/athletes/{{_id}}/sports">{{gender}}</a></td>
                        <td><a href="/athletes/{{_id}}/sports">{{country}}</a></td>
                        <td><a style="color: red;" href="/sports/{{_id}}/{{@root.sportId}}/deleteAthlete">‚ùå</a></td>
                    </tr>
                {{/each}}
                </tbody>
                </table>
                <div class="divSelectList1">
                    <h3>Ajouter un participant : </h3>    
                    <select name="athleteId" class="selectList1">
                        {{#each listAthlete}}
                            <option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
                        {{/each}}
                    </select>
                    <input id="inputSportId" name="sportId" type="hidden" value="{{sportId}}">
                    <button type="submit" class="btn btn-primary">Valider</button>    
                </div>
            </center>
        </form>
        <form action="/sports/deleteSport" method="POST">
            <input id="inputSportId" name="sportId" type="hidden" value="{{sportId}}">
            <a href="/sports/{{@root.sportId}}/deleteSport2">
            <button style="margin-left: 20px;"  type="submit" class="btn btn-danger">SUPPRIMER LA DISCIPLINE</button>
            </a>
        </form>
        <br>
        <a class="btn btn btn-primary" href="/sports" role="button" style="margin-left: 20px;">Retour</a>
    </div>
{{/if}}
    



