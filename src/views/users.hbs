        <h1><strong>System Users</strong></h1>
    <br>
    <table class="table table-hover">
            <thead class="table-dark">
                <tr class="tdLarge">
                <th scope="col">Login</th>
                <th scope="col">Mdp</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {{#each users}}
                <tr class="tdLarge">
                    <td><a href="/users/{{_id}}">{{login}}</a></td>
                    <td><a href="/users/{{_id}}">{{password}}</a></td>
                    <td class="pictoFont"><a href="/users/{{_id}}">üîé</a></td>
